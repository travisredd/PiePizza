@page
@model PiePizza.Pages.IndexModel

@foreach (var pie in Model.pieRepository.GetAllPies())
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.pieRepository.GetPieById(pie.Id).ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@Model.pieRepository.GetPieById(pie.Id).Price</h3>
                <h3 class="text-sucess">
                    @Model.pieRepository.GetPieById(pie.Id).Name
                </h3>
                <p>@Model.pieRepository.GetPieById(pie.Id).ShortDescription</p>
            </div>
        </div>
    </div>

}